@model  OgrenciYonetimSistemi.Models.Helper.ChatDetayGetir


<div style="display:none;" class="SohbetEdilecekUye" id="@ViewData["Uye_Id"]"></div>
@foreach (var yazismaDetay in Model.YazismaDetayListesi)
{
    if (yazismaDetay.MesajKonum == "R")
    {

        <div class="outgoing_msg">
            <div class="sent_msg">
                <p>
                    @yazismaDetay.Icerik
                </p>
                <span class="time_date"> @yazismaDetay.KayitTarihi</span>
            </div>
        </div>
    }
    else
    {
        <div class="incoming_msg">
            <div class="incoming_msg_img"> <img src="~/Content/images/user-profile.png" alt="sunil"> </div>

            <div class="received_msg">
                <div class="received_withd_msg">
                    <p>
                        @yazismaDetay.Icerik
                    </p>
                    <span class="time_date"> @yazismaDetay.KayitTarihi</span>
                </div>
            </div>
        </div>
    }
}



